	<!-- Max Contain 4 -->
	<GameObject
		id="GDIV35Ox_SP"
		inheritFrom="GDIV35Ox_SP">
		<Behaviors>
			<HordeTransportContain
				id="ModuleTag_Contain"
				xai:joinAction="Append"
				ContainMax="4"
				Slots="4"/>
		</Behaviors>
	</GameObject>

	<!-- Unsellable and can't toggle power | Removed upgrade buttons | Costs 0 power -->
	<GameObject
		id="GDICommandPost"
		inheritFrom="GDICommandPost"
		KindOf="STRUCTURE SELECTABLE IMMOBILE CAN_CAST_REFLECTIONS FS_TECHNOLOGY NOT_AUTOACQUIRABLE AUTO_ACQUIRABLE_BY_AI COVER FS_RADAR NOT_SELLABLE"
		EnergyProduction="0"
		CommandSet="EmptyCommandSet"/>

	<!-- Costs 0 power | Removed Engineer contain -->
	<GameObject
		id="GDI_ASATDefense"
		inheritFrom="GDI_ASATDefense"
		KindOf="SELECTABLE IMMOBILE CAN_CAST_REFLECTIONS STRUCTURE NOT_AUTOACQUIRABLE UNIQUE_UNIT COVER AUTO_ACQUIRABLE_BY_AI"
		EnergyProduction="0">
		<Behaviors>
			<EngineerContain
				id="ModuleTag_EngineerContain"
				xai:joinAction="Remove"/>
		</Behaviors>
	</GameObject>

	<!-- Increased speed from 100 to 300 | Increased health-->
	<GameObject
		id="NODCarryall_SP"
		inheritFrom="NODCarryall_SP">
		<LocomotorSet
			Locomotor="NODCarryallLocomotor"
			Condition="NORMAL"
			Speed="300"/>
		<Body>
			<ActiveBody
				id="ModuleTag_Body"
				xai:joinAction="Replace"
				MaxHealth="99999"/>
		</Body>
	</GameObject>

	<!-- Reduced wall health from 3000 -->
	<GameObject
		id="GDIWallSegment"
		inheritFrom="GDIWallSegment">
		<Body>
			<ActiveBody
				id="ModuleTag_Body"
				xai:joinAction="Replace"
				MaxHealth="1750"/>
		</Body>
	</GameObject>

