	<!-- Lowered damage from 125 -->
	<WeaponTemplate
		id="AlienStormRiderProtonCannonWarhead"
		Name="AlienStormRiderProtonCannonWarhead"
		AntiMask="ANTI_AIRBORNE_VEHICLE ANTI_GROUND ANTI_AIRBORNE_INFANTRY ANTI_STRUCTURE"
		ProjectileCollidesWith="ALLIES ENEMIES NEUTRAL STRUCTURES WALLS">
		<Nuggets>
			<DamageNugget
				Damage="80"
				DamageType="ROCKET"
				DamageFXType="GDI_RIFLE">
				<DamageScalarDetails
					Scalar="150%">
					<Filter
						Rule="NONE"
						Include="CIVILIAN_BUILDING"/>
				</DamageScalarDetails>
				<DamageScalarDetails
					Scalar="50%">
					<Filter
						Rule="ALL"
						Exclude="VEHICLE AIRCRAFT CIVILIAN_BUILDING"/>
				</DamageScalarDetails>
				<DamageScalarDetails
					Scalar="115%">
					<Filter
						Rule="NONE">
						<IncludeThing>GDIJetpackTrooper</IncludeThing>
					</Filter>
				</DamageScalarDetails>
				<!-- Dealing less damage to light vehicles -->
				<DamageScalarDetails
					Scalar="75%">
					<Filter
						Rule="NONE">
						<!-- GDI Units -->
						<IncludeThing>GDIAPC</IncludeThing>
						<IncludeThing>GDIAPC_Veteran</IncludeThing>
						<IncludeThing>GDIPitbull</IncludeThing>
