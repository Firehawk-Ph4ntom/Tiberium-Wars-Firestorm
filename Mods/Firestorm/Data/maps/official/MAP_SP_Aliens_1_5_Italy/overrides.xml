	<GameObject
		id="AlienTiberiumTower"
		inheritFrom="AlienTiberiumTower"
		BuildCost="2000"
		BuildTime="20"
		RefundValue="300"
		EnergyProduction="-8"/>

	<GameObject
		id="AlienHarvester"
