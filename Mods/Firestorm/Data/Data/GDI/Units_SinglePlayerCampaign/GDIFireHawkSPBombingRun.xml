<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xai="uri:ea.com:eala:asset:instance">
	<Tags/>
	<Includes>
		<!-- Base Object -->
		<Include type="instance" source="DATA:Firestorm\Data\Data\GDI\Units\Aircraft\GDIFireHawk.xml"/>
	</Includes>
	<GameObject id="GDIFireHawkSPBombingRun" EditorName="GDIFireHawkSPBombingRun" inheritFrom="GDIFireHawk">
		<EquivalentTo>GDIFireHawk</EquivalentTo>
		<LocomotorSet Locomotor="GenericJetAircraftLocomotor" Condition="NORMAL" Speed="220.0" />
		<Behaviors>
			<WeaponSetUpdate id="ModuleTag_WeaponSetUpdate" xai:joinAction="Replace">
				<WeaponSlotHardpoint ID="1">
					<Weapon Template="GDIFirehawkMissileMainLoad" ObjectStatus="WEAPON_UPGRADED_01"/>
					<Weapon Template="GDIFirehawkThermoBaricMissileMainLoad" ObjectStatus="WEAPON_UPGRADED_01 WEAPON_UPGRADED_03"/>
				</WeaponSlotHardpoint>
				<WeaponSlotHardpoint ID="2">
					<Weapon Template="GDIFirehawkClusterBomb" ObjectStatus="WEAPON_UPGRADED_02"/>
				</WeaponSlotHardpoint>
			</WeaponSetUpdate>
		</Behaviors>
		<AI>
			<JetAIUpdate id="ModuleTag_AI" xai:joinAction="Replace" AutoAcquireEnemiesWhenIdle="YES" KeepsParkingSpaceWhenAirborne="true" OutOfAmmoDamagePerSecond="1.5" CirclesForAttack="true" ReturnToBaseWhenVictimDead="true" AILuaEventsList="GDIFirehawkFunctions">
				<UnitAITargetChooserData IdleScanDelay="0.1s" TargetingCompareList="CompleteUnitTargetingCompareList"/>
				<LockonInfo/>
			</JetAIUpdate>
		</AI>
		<VisionInfo VisionRange="75" ShroudClearingRange="450" />
	</GameObject>

	<WeaponTemplate
		id="GDIFirehawkClusterBomb"
		Name="GDIFirehawkClusterBomb"
		AttackRange="100"
		AcceptableAimDelta="5d"
		DisableScatterForTargetsOnWall="true"
		ScatterRadius="1"
		WeaponSpeed="150"
		WeaponRecoil="20d"
		FireSound="GDI_Firehawk_FireSoundMS"
		ClipSize="1"
		HitPercentage="0%"
		RequiredFiringObjectStatus="WEAPON_UPGRADED_02"
		ReAcquireDetailType="PRE_FIRE"
		AntiMask="ANTI_GROUND ANTI_STRUCTURE"
		CanFireWhileMoving="true">
		<FiringDuration
			MinSeconds="0.1s"
			MaxSeconds="0.1s"/>
		<ClipReloadTime
			MinSeconds="0.2s"
			MaxSeconds="0.2s"/>
		<Nuggets>
			<ProjectileNugget
				WarheadTemplate="GDIFirehawkClusterBombWarhead"
				ProjectileTemplate="GDIFirehawkBombProjectile">
				<VeterancyProjectiles
					VeterancyLevel="HEROIC"
					ProjectileTemplate="GDIFirehawkBombProjectile_Veteran"/>
			</ProjectileNugget>
		</Nuggets>
	</WeaponTemplate>

	<WeaponTemplate
		id="GDIFirehawkClusterBombWarhead"
		Name="GDIFirehawkClusterBombWarhead"
		AntiMask="ANTI_GROUND ANTI_STRUCTURE"
		ProjectileCollidesWith="ALLIES ENEMIES NEUTRAL STRUCTURES WALLS">
		<Nuggets>
			<WeaponOCLNugget
				WeaponOCL="OCL_ClusterBombSeed"/>
			<DamageNugget
				Damage="10000000"
				Radius="100"
				DelayTimeSeconds="1.25s"
				DamageType="UNRESISTABLE"
				DeathType="BURNED"
				DamageFXType="GDI_RIFLE"/>
			<SuppressionNugget
				Radius="100"
				Suppression="100"
				DurationSeconds="5s"/>
		</Nuggets>
	</WeaponTemplate>

	<WeaponTemplate
		id="ClusterBomblet"
		Name="ClusterBomblet"
		AttackRange="100000.0">
		<Nuggets>
			<DamageNugget
				Damage="10000000"
				Radius="50"
				DamageType="UNRESISTABLE"
				DamageFXType="GDI_RIFLE"/>
		</Nuggets>
	</WeaponTemplate>
</AssetDeclaration>