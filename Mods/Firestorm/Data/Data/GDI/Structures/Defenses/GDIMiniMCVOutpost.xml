	<GameObject id="GDIMiniMCVOutpost" inheritFrom="BaseStructure" SelectPortrait="Portrait_GDIOutpost" ButtonImage="Portrait_GDIOutpost" Side="GDI" BuildCost="1500" BuildTime="15" CommandSet="GDIMiniMCVOutpostCommandSet" KindOf="STRUCTURE SELECTABLE IMMOBILE CAN_CAST_REFLECTIONS NOT_AUTOACQUIRABLE AUTO_ACQUIRABLE_BY_AI COVER OUTPOST PROJECT_BUILDABILITY_FOR_ALLIES" ProductionQueueType="OTHER_STRUCTURE" BuildPlacementTypeFlag="OTHER_STRUCTURE" EditorName="GDISurveyorOutpost" ThreatLevel="10" TypeDescription="Type:Outpost" Description="Desc:GDIOutpost">
