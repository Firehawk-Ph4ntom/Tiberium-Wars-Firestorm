<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xai="uri:ea.com:eala:asset:instance">
	<!-- Normal Pod -->
	<GameObject id="GDIOrcaSensorPod" KindOf="TARGETABLE IMMOBILE MINE NO_COLLIDE STICK_TO_TERRAIN_SLOPE" RadarPriority="NOT_ON_RADAR" Side="GDI" EditorName="GDIOrcaSensorPod" EditorSorting="SYSTEM">
		<ArmorSet Armor="NoArmor"/>
		<Draws>
			<ScriptedModelDraw id="ModuleTag_Draw" OkToChangeModelColor="true">
				<ModelConditionState ParseCondStateType="PARSE_DEFAULT">
					<Model Name="GUSensor"/>
					<ShadowInfo Type="ADDITIVE_DECAL" SizeX="800" SizeY="800" OverrideLODVisibility="true" MaxHeight="200" UseHouseColor="true" LocalPlayerOnly="true" Texture="Decal_Sensor"/>
				</ModelConditionState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<Physics id="ModuleTag_Physics"/>
			<InvisibilityUpdate id="ModuleTag_Invisibility" UpdatePeriod="0.1s" Options="STARTS_ACTIVE">
				<InvisibilityNugget/>
			</InvisibilityUpdate>
			<StealthDetectorUpdate id="ModuleTag_StealthDetect" DetectionRange="400"/>
			<LifetimeUpdate id="ModuleTag_LifeTimeUpdate" MinLifetime="120s" MaxLifetime="120s" DeathType="FADED"/>
			<DestroyDie id="ModuleTag_Die">
				<DieMuxData DeathTypes="ALL"/>
			</DestroyDie>
			<FXListBehavior id="ModuleTag_FXList">
				<DieMuxData DeathTypes="ALL"/>
				<Event FX="FX_Nod_DisruptionPodExplosion"/>
			</FXListBehavior>
		</Behaviors>
		<AI>
			<AIUpdate id="ModuleTag_AI" AutoAcquireEnemiesWhenIdle="NO"/>
		</AI>
		<Body>
			<ActiveBody id="ModuleTag_Body" MaxHealth="25"/>
		</Body>
		<AudioArraySound>
			<AudioEntry Sound="GDI_Orca_SensorPodGroundImpact" AudioType="soundAmbient"/>
		</AudioArraySound>
		<ShadowInfo Type="DECAL" Texture="shadowi" SizeX="14" SizeY="14"/>
		<VisionInfo VisionRange="100" ShroudClearingRange="400"/>
	</GameObject>
	<!-- Vehicle Sticky Pod -->
	<GameObject id="GDIOrcaSensorVehicleStickyPod" inheritFrom="GDIOrcaSensorPod" KindOf="IMMOBILE MINE NO_COLLIDE" EditorName="GDIOrcaSensorVehicleStickyPod">
		<Behaviors>
			<FXListBehavior id="ModuleTag_FXList" xai:joinAction="Remove"/>
			<AttachUpdate id="ModuleTag_AttachUpdate" Range="10.0" Teleport="true" UseGeometry="true" DetachWhenParentHealed="true">
				<ObjectFilter Rule="ANY" Include="VEHICLE STRUCTURE">
					<ExcludeThing>AlienCrystalShield</ExcludeThing>
					<ExcludeThing>AlienWormHole</ExcludeThing>
				</ObjectFilter>
			</AttachUpdate>
		</Behaviors>
	</GameObject>
	<!-- Aircraft Sticky Pod -->
	<GameObject id="GDIOrcaSensorAircraftStickyPod" inheritFrom="GDIOrcaSensorPod" EditorName="GDIOrcaSensorAircraftStickyPod">
		<Behaviors>
			<AttachUpdate xai:joinAction="Replace" id="ModuleTag_AttachUpdate" Range="10.0" Teleport="true" UseGeometry="true" DetachWhenParentHealed="true">
				<ObjectFilter Rule="NONE" Include="AIRCRAFT"/>
			</AttachUpdate>
		</Behaviors>
	</GameObject>
</AssetDeclaration>