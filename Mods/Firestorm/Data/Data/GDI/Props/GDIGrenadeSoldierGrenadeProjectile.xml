<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xai="uri:ea.com:eala:asset:instance">
	<!-- Normal Projectile -->
	<GameObject id="GDIGrenadeSoldierGrenadeProjectile" KindOf="PROJECTILE NO_COLLIDE HIDE_IF_FOGGED" Side="GDI" EditorName="GDIGrenadeSoldierGrenadeProjectile" EditorSorting="SYSTEM">
		<ArmorSet Armor="NoArmor" />
		<Draws>
			<ScriptedModelDraw id="ModuleTag_Draw" OkToChangeModelColor="true">
				<ModelConditionState ParseCondStateType="PARSE_DEFAULT">
					<Model Name="GUGrenade"/>
					<ParticleSysBone BoneName="FXTrail" FXParticleSystemTemplate="GUGrenadeTrail" FollowBone="true" />
				</ModelConditionState>
				<AnimationState ParseCondStateType="PARSE_DEFAULT">
					<Animation AnimNickName="IDL" AnimationName="GUGrenade" AnimationMode="LOOP" AnimationSpeedFactorMin="0.8" AnimationSpeedFactorMax="1.2"/>
				</AnimationState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<FXListBehavior id="ModuleTag_FXList">
				<DieMuxData DeathTypes="ALL"/>
				<Event FX="FX_GrenadeHit"/>
			</FXListBehavior>
			<DestroyDie id="ModuleTag_Die">
				<DieMuxData DeathTypes="ALL"/>
			</DestroyDie>
			<BezierProjectile id="ModuleTag_BezierProjectile" FirstHeightMin="50" FirstHeightMax="50" SecondHeightMin="50" SecondHeightMax="50" FirstPercentIndent="20%" SecondPercentIndent="90%" GroundHitFX="FX_GDIMissleMiss" DetonateCallsKill="true" OrientToFlightPath="true"/>
		</Behaviors>
		<Body>
			<ActiveBody id="ModuleTag_Body" MaxHealth="100"/>
		</Body>
	</GameObject>
	<!-- Heroic Projectile -->
	<GameObject id="GDIGrenadeSoldierGrenadeProjectile_Veteran" inheritFrom="GDIGrenadeSoldierGrenadeProjectile" EditorName="GDIGrenadeSoldierGrenadeProjectile_Veteran">
		<Draws>
			<ScriptedModelDraw id="ModuleTag_Draw" xai:joinAction="Replace">
				<ModelConditionState ParseCondStateType="PARSE_DEFAULT">
					<Model Name="GUGrenade"/>
					<ParticleSysBone BoneName="FXTrail" FXParticleSystemTemplate="GUGrenadeTrailHeroic" FollowBone="true" />
				</ModelConditionState>
				<AnimationState ParseCondStateType="PARSE_DEFAULT">
					<Animation AnimNickName="IDL" AnimationName="GUGrenade" AnimationMode="LOOP" AnimationSpeedFactorMin="0.8" AnimationSpeedFactorMax="1.2"/>
				</AnimationState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<FXListBehavior id="ModuleTag_FXList" xai:joinAction="Replace">
				<DieMuxData DeathTypes="ALL"/>
				<Event FX="FX_GrenadeHitHeroic"/>
			</FXListBehavior>
		</Behaviors>
	</GameObject>
</AssetDeclaration>