<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xai="uri:ea.com:eala:asset:instance">
	<!-- Neutral Multiplayer Beacon -->
	<GameObject id="MultiplayerBeacon" Side="Neutral" KindOf="BEACON UNATTACKABLE NOT_AUTOACQUIRABLE NO_COLLIDE IGNORED_IN_FINDPOSITIONAROUND AIRCRAFT RESIST_EMP" EditorName="MultiplayerBeacon" EditorSorting="MISC_MAN_MADE">
		<DisplayName>CONTROLBAR:Beacon</DisplayName>
		<ArmorSet Armor="NoArmor"/>
		<Draws>
			<ScriptedModelDraw id="ModuleTag_Draw" OkToChangeModelColor="true">
				<ModelConditionState ParseCondStateType="PARSE_DEFAULT">
					<Model Name="GPFlareGeo"/>
					<ParticleSysBone BoneName="FXBone01" FXParticleSystemTemplate="GDIMultiplayerBeaconFlare" FollowBone="false"/>
					<ParticleSysBone BoneName="FXBone01" FXParticleSystemTemplate="GDIMultiplayerBeaconFlareGlow" FollowBone="false"/>
				</ModelConditionState>
				<ModelConditionState ParseCondStateType="PARSE_NORMAL" ConditionsYes="DYING"/>
				<ModelConditionState ParseCondStateType="PARSE_NORMAL" ConditionsYes="WORLD_BUILDER"/>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<LifetimeUpdate id="ModuleTag_LifeTimeUpdate" MinLifetime="90s" MaxLifetime="90s"/>
			<InvisibilityUpdate id="ModuleTag_Invisibility" UpdatePeriod="0.1s" Options="STARTS_ACTIVE">
				<InvisibilityNugget/>
			</InvisibilityUpdate>
			<DestroyDie id="ModuleTag_Die">
				<DieMuxData DeathTypes="ALL"/>
			</DestroyDie>
		</Behaviors>
		<Body>
			<HighlanderBody id="ModuleTag_Body" MaxHealth="1.0"/>
		</Body>
	</GameObject>
	<!-- Alien Multiplayer Beacon -->
	<GameObject id="AlienMultiplayerBeacon" inheritFrom="MultiplayerBeacon" EditorName="AlienMultiplayerBeacon">
		<Draws>
			<ScriptedModelDraw id="ModuleTag_Draw" OkToChangeModelColor="true" xai:joinAction="Replace">
				<ModelConditionState ParseCondStateType="PARSE_DEFAULT">
					<Model Name="ABFLAREGEO_SKN"/>
				</ModelConditionState>
				<ModelConditionState ParseCondStateType="PARSE_NORMAL" ConditionsYes="DYING"/>
				<ModelConditionState ParseCondStateType="PARSE_NORMAL" ConditionsYes="WORLD_BUILDER"/>
			</ScriptedModelDraw>
		</Draws>
	</GameObject>
</AssetDeclaration>