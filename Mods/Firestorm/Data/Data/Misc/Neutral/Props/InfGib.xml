<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xai="uri:ea.com:eala:asset:instance">
	<!-- Gib Projectile 01 -->
	<GameObject id="InfGib_01" EditorName="InfGib_01" Side="Neutral" KindOf="UNATTACKABLE NOT_AUTOACQUIRABLE" EditorSorting="SYSTEM">
		<Draws>
			<ScriptedModelDraw id="ModuleTag_Draw" OkToChangeModelColor="true">
				<ModelConditionState ParseCondStateType="PARSE_DEFAULT">
					<Model Name="SYGIB_1"/>
					<ParticleSysBone BoneName="ROOTTRANSFORM" FXParticleSystemTemplate="BloodExplosionFlairsSlave" FollowBone="true"/>
				</ModelConditionState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<Physics id="ModuleTag_Physics" BounceCount="2" GroundHitFX="FX_InfGibBlood" TumbleRandomly="true"/>
			<LifetimeUpdate id="ModuleTag_LifeTimeUpdate" MinLifetime="1s" MaxLifetime="1s"/>
			<SlowDeath id="ModuleTag_Death" SinkRate="0.5" SinkDelay="2s" DestructionDelay="2s">
				<DieMuxData DeathTypes="ALL"/>
			</SlowDeath>
		</Behaviors>
		<Body>
			<ActiveBody id="ModuleTag_Body" MaxHealth="100"/>
		</Body>
		<ShadowInfo Type="VOLUME"/>
	</GameObject>
