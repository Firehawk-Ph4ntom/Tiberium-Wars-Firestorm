<?xml version="1.0" encoding="UTF-8"?>
<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<GameObject
		id="BaseRepairDrone"
		KindOf="AIRCRAFT NO_COLLIDE NOT_AUTOACQUIRABLE UNATTACKABLE"
		EditorSorting="MISC_MAN_MADE"
		RadarPriority="NOT_ON_RADAR"
		ShockwaveResistance="120">

		<DisplayName>Name:RepairDrone</DisplayName>

		<ArmorSet
			Armor="NoArmor"/>

		<Behaviors>
			<SlavedUpdate
				id="ModuleTag_SlavedUpdate"
				LeashRange="150"
				GuardMaxRange="150"
				GuardWanderRange="50"/>

			<SlowDeath
				id="ModuleTag_Death"
				DestructionDelay="3s"
				FadeTime="3s"
				Fade="true">
				<DieMuxData
					DeathTypes="ALL"/>
			</SlowDeath>

			<PassiveAreaEffectBehavior
				id="ModuleTag_PassiveEffectBehavior"
				HealingPointsPerSecond="150"
				HealFX="FX_Repair"
				AffectAttached="true"
				AffectUnderAttack="true">
				<AllowFilter
					Rule="ANY"
					Relationship="ALLIES"
					Include="VEHICLE"
					Exclude="AIRCRAFT">
					<!-- NOD Cyborgs -->
					<IncludeThing>NODCyborgInfantry</IncludeThing>
					<IncludeThing>NODAscended</IncludeThing>
					<IncludeThing>NODReaper</IncludeThing>
					<IncludeThing>NODCyborgCommando</IncludeThing>
				</AllowFilter>
			</PassiveAreaEffectBehavior>

			<AttachUpdate
				id="ModuleTag_AttachUpdate"
				ParentStatus="UNDERGOING_REPAIR"
				Range="150"
				CloseEnoughRange="20"
				InitialAttachDelay="0.5s"
				Flags="FIND_BEST_PARENT UNCONTAINED_ONLY ONE_ATTACH_PER_PARENT"
				Teleport="false"
				DetachWhenParentHealed="true"
				DetachWhenParentOutOfSlavedRange="true"
				RequireFullyHealedToDetach="true"
				ScanForNewParentWhenDetached="true"
				CanAttachToHordeMembers="true">
				<ObjectFilter
					Rule="ANY"
					Relationship="ALLIES"
					Include="VEHICLE"
					Exclude="AIRCRAFT">
					<!-- NOD Cyborgs -->
					<IncludeThing>NODCyborgInfantry</IncludeThing>
					<IncludeThing>NODAscended</IncludeThing>
					<IncludeThing>NODReaper</IncludeThing>
					<IncludeThing>NODCyborgCommando</IncludeThing>
				</ObjectFilter>
			</AttachUpdate>

			<Physics
				id="ModuleTag_Physics"/>
		</Behaviors>

		<AI>
			<JetAIUpdate
				id="ModuleTag_AI"
				AutoAcquireEnemiesWhenIdle="NO"
				MinHeight="5"
				CirclesForAttack="true">
				<LockonInfo/>
			</JetAIUpdate>
		</AI>

		<Body>
			<ActiveBody
				id="ModuleTag_Body"
				MaxHealth="1000000"/>
		</Body>

		<ClientBehaviors>
			<ModelConditionAudioLoopClientBehavior
				id="MCALCB">
				<ModelConditionSound
					Sound="GDI_RepairDrone_sparks_delayedLoop"
					RequiredFlags="ATTACHED"
					ExcludedFlags="DYING"/>
			</ModelConditionAudioLoopClientBehavior>
		</ClientBehaviors>

		<Geometry
			IsSmall="true">
			<Shape
				Type="CYLINDER"
				MajorRadius="5"
				Height="5"/>
		</Geometry>

		<VisionInfo
			VisionRange="150"
			ShroudClearingRange="20"/>
	</GameObject>
</AssetDeclaration>