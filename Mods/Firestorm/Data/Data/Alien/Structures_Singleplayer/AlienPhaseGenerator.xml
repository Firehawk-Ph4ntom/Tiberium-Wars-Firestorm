	<GameObject id="Alien_PhaseGenerator" inheritFrom="BaseStructure" KindOf="SELECTABLE CAN_ATTACK IMMOBILE CAN_CAST_REFLECTIONS TIBERIUM_BASED STRUCTURE FS_BASE_DEFENSE COVER AUTO_ACQUIRABLE_BY_AI HEALED_BY_TIBERIUM RESIST_EMP NOT_SELLABLE KEEP_CLASSIFIED_WHEN_DEAD" ThreatLevel="10" PlacementViewAngle="225d" Side="ALIEN" EditorName="AlienPhaseGenerator" BuildTime="35" CommandSet="AlienPhaseGeneratorCommandSet" SelectPortrait="Portrait_AlienPhaseGenerator" ButtonImage="Portrait_AlienPhaseGenerator" ProductionQueueType="OTHER_STRUCTURE" BuildPlacementTypeFlag="OTHER_STRUCTURE" BuildCost="3500" Browser="REGION Alien_Structures STRUCTURE">
		<DisplayName xmlns:xai="uri:ea.com:eala:asset:instance" xai:joinAction="Replace">Name:AlienPhaseGenerator</DisplayName>
		<Draws>
			<ScriptedModelDraw id="ModuleTag_Draw" OkToChangeModelColor="true" AffectedByStealth="false">
				<ModelConditionState ParseCondStateType="PARSE_DEFAULT">
					<Model Name="ASPhaseGen"/>
				</ModelConditionState>
				<ModelConditionState ParseCondStateType="PARSE_NORMAL" ConditionsYes="RUBBLE">
					<Model Name="ASPhaseGen_D3"/>
				</ModelConditionState>
				<ModelConditionState ParseCondStateType="PARSE_NORMAL" ConditionsYes="REALLYDAMAGED">
					<Model Name="ASPhaseGen_D2"/>
				</ModelConditionState>
				<ModelConditionState ParseCondStateType="PARSE_NORMAL" ConditionsYes="DAMAGED">
					<Model Name="ASPhaseGen"/>
					<Texture Original="ABPhaseGen" New="ABPhaseGen_D1"/>
				</ModelConditionState>
				<AnimationState ParseCondStateType="PARSE_DEFAULT"/>
				<AnimationState ParseCondStateType="PARSE_NORMAL" ConditionsYes="RUBBLE" StateName="STATE_Rubble" Flags="START_FRAME_LAST">
					<Animation AnimationName="ASPhaseGen_D3" AnimationMode="MANUAL"/>
					<Script> Prev = CurDrawablePrevAnimationState(); if Prev ~= "STATE_Rubble" and Prev ~= "TRANS_IntoRubble" then CurDrawableSetTransitionAnimState("TRANS_IntoRubble") end; </Script>
				</AnimationState>
				<AnimationState ParseCondStateType="PARSE_NORMAL" ConditionsYes="REALLYDAMAGED" StateName="STATE_ReallyDamaged" Flags="START_FRAME_LAST">
					<Animation AnimationName="ASPhaseGen_D2" AnimationMode="MANUAL"/>
					<Script> Prev = CurDrawablePrevAnimationState(); if Prev ~= "STATE_ReallyDamaged" and Prev ~= "TRANS_IntoReallyDamaged" then CurDrawableSetTransitionAnimState("TRANS_IntoReallyDamaged") end; </Script>
				</AnimationState>
				<AnimationState ParseCondStateType="PARSE_TRANSITION" StateName="TRANS_IntoReallyDamaged">
					<Animation AnimationName="ASPhaseGen_D2" AnimationMode="ONCE" AnimationBlendTime="0"/>
				</AnimationState>
				<AnimationState ParseCondStateType="PARSE_TRANSITION" StateName="TRANS_IntoRubble">
					<Animation AnimationName="ASPhaseGen_D3" AnimationMode="ONCE" AnimationBlendTime="0"/>
				</AnimationState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<SlowDeath id="ModuleTag_Death" SinkDelay="2.5s" SinkRate="2.5" DestructionDelay="5s">
				<Sound Type="INITIAL" List="ALI_Building_Die"/>
				<DieMuxData DeathTypes="ALL"/>
			</SlowDeath>
			<FXListBehavior id="ModuleTag_FXList">
				<DieMuxData DeathTypes="ALL"/>
				<Event Index="onTransitionToDamaged" FX="FX_AlienBuildingDamagedM"/>
				<Event Index="onTransitionToReallyDamaged" FX="FX_AlienBuildingDamagedM"/>
				<Event Index="onTransitionToRubble" FX="FX_AlienBuildingRubbleM"/>
