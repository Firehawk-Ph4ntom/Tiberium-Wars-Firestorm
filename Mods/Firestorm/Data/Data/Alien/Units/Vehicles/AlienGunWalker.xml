			</WeaponSetUpdate>
			<AimWeapon id="ModuleTag_AimWeapon" AimHighThreshold="0.5"/>
			<UncombineSpecialPower id="ModuleTag_SpecialPowerUncombine" SpecialPowerTemplate="SpecialPowerUncombineWithUnit"/>
