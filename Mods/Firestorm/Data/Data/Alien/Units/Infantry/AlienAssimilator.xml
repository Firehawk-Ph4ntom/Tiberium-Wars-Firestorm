		<Draws>
			<ScriptedModelDraw id="ModuleTag_Draw" OkToChangeModelColor="true">
				<ModelConditionState ParseCondStateType="PARSE_DEFAULT">
					<Model Name="AUAsmlator_SKN"/>
				</ModelConditionState>
				<ModelConditionState ParseCondStateType="PARSE_NORMAL" ConditionsYes="FORMATION_PREVIEW">
					<Model Name="FXEngineer_FP"/>
				</ModelConditionState>
				<ModelConditionState ParseCondStateType="PARSE_NORMAL" ConditionsYes="USER_1 USER_2">
					<Model Name="AUAsmlator_SKN"/>
					<ParticleSysBone BoneName="NONE" FXParticleSystemTemplate="NODTibInfusionBlue" FollowBone="true"/>
				</ModelConditionState>
				<ModelConditionState ParseCondStateType="PARSE_NORMAL" ConditionsYes="USER_1">
					<Model Name="AUAsmlator_SKN"/>
					<ParticleSysBone BoneName="NONE" FXParticleSystemTemplate="NODTibInfusion" FollowBone="true"/>
				</ModelConditionState>
				<ModelConditionState ParseCondStateType="PARSE_NORMAL" ConditionsYes="INSIDE_GARRISON">
					<Model Name=""/>
				</ModelConditionState>
				<AnimationState ParseCondStateType="PARSE_NORMAL" ConditionsYes="FORMATION_PREVIEW"/>
				<AnimationState ParseCondStateType="PARSE_DEFAULT" StateName="STATE_bored" Flags="RESTART_ANIM_WHEN_COMPLETE">
					<Animation AnimationName="AUAsmlator_BIDA" AnimationMode="ONCE" AnimationSpeedFactorMin="0.9" AnimationSpeedFactorMax="1.1" AnimationPriority="30"/>
					<Animation AnimationName="AUAsmlator_BIFA" AnimationMode="ONCE" AnimationSpeedFactorMin="0.9" AnimationSpeedFactorMax="1.1" AnimationPriority="5"/>
					<Script> Prev = CurDrawablePrevAnimationState(); if Prev == "STATE_Selected" or Prev == "ATNB" or Prev == "STATE_Run" then CurDrawableSetTransitionAnimState("TRANS_SelectedToIdle") end; </Script>
				</AnimationState>
				<AnimationState ParseCondStateType="PARSE_NORMAL" ConditionsYes="FRONTCRUSHED">
					<Animation AnimationName="AUAsmlator_CDTA" AnimationMode="ONCE"/>
				</AnimationState>
				<AnimationState ParseCondStateType="PARSE_NORMAL" ConditionsYes="BACKCRUSHED">
					<Animation AnimationName="AUAsmlator_CDTA" AnimationMode="ONCE"/>
				</AnimationState>
				<AnimationState ParseCondStateType="PARSE_NORMAL" ConditionsYes="DYING">
					<Animation AnimationName="AUAsmlator_DIEA" AnimationMode="ONCE"/>
					<Animation AnimationName="AUAsmlator_DIEB" AnimationMode="ONCE"/>
				</AnimationState>
				<AnimationState ParseCondStateType="PARSE_NORMAL" ConditionsYes="SPECIAL_WEAPON_ONE">
					<Animation AnimationName="AUAsmlator_AIDA" AnimationMode="ONCE" AnimationBlendTime="10" AnimationMustCompleteBlend="true"/>
				</AnimationState>
				<AnimationState ParseCondStateType="PARSE_NORMAL" ConditionsYes="MOVING FIRING_OR_PREATTACK_A" StateName="STATE_Run" Flags="RANDOMSTART">
					<Animation AnimationName="AUAsmlator_RUNA" AnimationMode="LOOP" Distance="20"/>
				</AnimationState>
				<AnimationState ParseCondStateType="PARSE_NORMAL" ConditionsYes="MOVING" StateName="STATE_Run" Flags="RANDOMSTART">
					<Animation AnimationName="AUAsmlator_RUNC" AnimationMode="LOOP" Distance="20" AnimationSpeedFactorMin="0.5" AnimationSpeedFactorMax="0.7" AnimationPriority="30"/>
					<Animation AnimationName="AUAsmlator_RUNA" AnimationMode="LOOP" Distance="20" AnimationSpeedFactorMin="0.5" AnimationSpeedFactorMax="0.7" AnimationPriority="10"/>
					<Animation AnimationName="AUAsmlator_RUNB" AnimationMode="LOOP" Distance="20" AnimationSpeedFactorMin="0.5" AnimationSpeedFactorMax="0.7" AnimationPriority="30"/>
					<Animation AnimationName="AUAsmlator_RUND" AnimationMode="LOOP" Distance="20" AnimationSpeedFactorMin="0.5" AnimationSpeedFactorMax="0.7" AnimationPriority="30"/>
				</AnimationState>
				<AnimationState ParseCondStateType="PARSE_NORMAL" ConditionsYes="SELECTED" StateName="STATE_Selected">
					<Animation AnimNickName="ATNB" AnimationName="AUAsmlator_AIDA" AnimationMode="LOOP" AnimationBlendTime="5" AnimationSpeedFactorMin="0.9" AnimationSpeedFactorMax="1.1" AnimationMustCompleteBlend="true"/>
					<Script> Prev = CurDrawablePrevAnimationState(); if Prev == "STATE_bored" then CurDrawableSetTransitionAnimState("TRANS_boredToAttention") end; </Script>
				</AnimationState>
				<AnimationState ParseCondStateType="PARSE_TRANSITION" StateName="TRANS_boredToAttention">
					<Animation AnimationName="AUAsmlator_BATA" AnimationMode="ONCE" AnimationBlendTime="5"/>
				</AnimationState>
				<AnimationState ParseCondStateType="PARSE_TRANSITION" StateName="TRANS_SelectedToIdle">
					<Animation AnimationName="AUAsmlator_ABTA" AnimationMode="ONCE" AnimationBlendTime="5"/>
				</AnimationState>
			</ScriptedModelDraw>
			<ScriptedModelDraw id="ModuleTag_Particles" AttachToBoneInAnotherModule="B_LEG02">
				<ModelConditionState ParseCondStateType="PARSE_DEFAULT">
					<Model Name="FXINVISBONE"/>
				</ModelConditionState>
				<AnimationState ParseCondStateType="PARSE_DEFAULT"/>
				<AnimationState ParseCondStateType="PARSE_NORMAL" ConditionsYes="USER_3 MOVING">
					<ParticleSysBone BoneName="INVISBONE01" FXParticleSystemTemplate="AlienSpeedTrails" FollowBone="true"/>
				</AnimationState>
			</ScriptedModelDraw>
			<ScriptedModelDraw id="ModuleTag_Particles2" AttachToBoneInAnotherModule="B_LEG16">
				<ModelConditionState ParseCondStateType="PARSE_DEFAULT">
					<Model Name="FXINVISBONE"/>
				</ModelConditionState>
				<AnimationState ParseCondStateType="PARSE_DEFAULT"/>
				<AnimationState ParseCondStateType="PARSE_NORMAL" ConditionsYes="USER_3 MOVING">
					<ParticleSysBone BoneName="INVISBONE01" FXParticleSystemTemplate="AlienSpeedTrails" FollowBone="true"/>
				</AnimationState>
			</ScriptedModelDraw>
			<ScriptedModelDraw id="ModuleTag_Particles3">
				<ModelConditionState ParseCondStateType="PARSE_DEFAULT">
					<Model Name="FXINVISBONE"/>
				</ModelConditionState>
				<AnimationState ParseCondStateType="PARSE_DEFAULT"/>
				<AnimationState ParseCondStateType="PARSE_NORMAL" ConditionsYes="REALLYDAMAGED">
					<ParticleSysBone BoneName="INVISBONE01" FXParticleSystemTemplate="AlienDamageInfantryIchor" FollowBone="true"/>
				</AnimationState>
			</ScriptedModelDraw>
			<ScriptedModelDraw id="ModuleTag_UnderRage">
				<ModelConditionState ParseCondStateType="PARSE_DEFAULT">
					<Model Name="FXINVISBONE"/>
				</ModelConditionState>
				<ModelConditionState ParseCondStateType="PARSE_NORMAL" ConditionsYes="DYING">
					<Model Name=""/>
				</ModelConditionState>
				<ModelConditionState ParseCondStateType="PARSE_NORMAL" ConditionsYes="FORMATION_PREVIEW">
					<Model Name=""/>
				</ModelConditionState>
				<ModelConditionState ParseCondStateType="PARSE_NORMAL" ConditionsYes="PASSENGER">
					<Model Name=""/>
				</ModelConditionState>
				<ModelConditionState ParseCondStateType="PARSE_NORMAL" ConditionsYes="USER_50">
					<Model Name="FXRAGEEFFECTSIGN"/>
				</ModelConditionState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<ProductionUpdate id="ModuleTag_Production" GiveNoXP="true"/>
			<InvisibilityUpdate id="ModuleTag_Invisibility" UpdatePeriod="0.1s" OpacityMin="30%" OpacityMax="100%" Options="STARTS_ACTIVE">
				<InvisibilityNugget EnteringStealthFX="FX_NODStealthTransitionOn" LeavingStealthFX="FX_NODStealthTransitionOff" HintDetectableStates="IS_ATTACKING" ForbiddenConditions="MOVING" ForbiddenConditionExceptions="MOVING MOVING_OUT_OF_THE_WAY"/>
			</InvisibilityUpdate>
			<EmotionTrackerUpdate id="Module_ETU">
				<TauntAndPointExcluded Rule="NONE"/>
			</EmotionTrackerUpdate>
			<SlowDeath id="ModuleTag_OCLGibs" SinkRate="10">
				<OCL>
					<OCL>OCL_AlienInfGibs</OCL>
				</OCL>
				<Sound List="ALI_Assimilator_SoundDie"/>
				<DieMuxData DeathTypes="EXPLODED"/>
			</SlowDeath>
			<SlowDeath id="ModuleTag_OCLChar" SinkRate="10">
