	<GameObject id="AlienAssimilator" inheritFrom="BaseInfantry" SelectPortrait="Portrait_ALIENAssimilator" ButtonImage="Portrait_ALIENAssimilator" Side="ALIEN" BuildCost="500" BuildTime="5" CommandSet="AlienAssimilatorCommandSet" KindOf="PRELOAD SELECTABLE ATTACK_NEEDS_LINE_OF_SIGHT CAN_CAST_REFLECTIONS INFANTRY SCORE PATH_THROUGH_INFANTRY STEALTH_GARRISON HEALED_BY_TIBERIUM SKIRMISH_AI_DONT_GARRISON ENGINEER TIBERIUM_BASED CAN_BE_FAVORITE_UNIT" VoicePriority="60" ThreatLevel="10" EditorName="AlienAssimilator" Description="Desc:AlienAssimilator" TypeDescription="Type:AlienAssimilator" UnitTypeIcon="EngineerIcon">
		<DisplayName xmlns:xai="uri:ea.com:eala:asset:instance" xai:joinAction="Replace">Name:ALIENAssimilator</DisplayName>
		<DisplayUpgrade>Upgrade_IchorPlating</DisplayUpgrade>
