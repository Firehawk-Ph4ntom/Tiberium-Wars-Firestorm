				<ModelConditionState ParseCondStateType="PARSE_DEFAULT">
					<Model Name="FXTIBBALLSMRED"/>
					<ParticleSysBone BoneName="NONE" FXParticleSystemTemplate="TwilightBlastTrail_projSm" FollowBone="true"/>
				</ModelConditionState>
			</ScriptedModelDraw>
		</Draws>
	</GameObject>
	<!-- Upgraded Bomblet -->
