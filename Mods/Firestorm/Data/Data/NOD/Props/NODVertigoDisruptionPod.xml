<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xai="uri:ea.com:eala:asset:instance">
	<!-- Normal Pod -->
	<GameObject id="NODVertigoDisruptionPod" KindOf="TARGETABLE IMMOBILE MINE NO_COLLIDE STICK_TO_TERRAIN_SLOPE" RadarPriority="NOT_ON_RADAR" Side="NOD" EditorName="NODVertigoDisruptionPod" EditorSorting="SYSTEM">
		<ArmorSet Armor="NoArmor"/>
		<Draws>
			<ScriptedModelDraw id="ModuleTag_Draw" OkToChangeModelColor="true">
				<ModelConditionState ParseCondStateType="PARSE_DEFAULT">
					<Model Name="FXDISRUPTIONPOD"/>
					<ShadowInfo Type="ADDITIVE_DECAL" SizeX="506" SizeY="506" OverrideLODVisibility="true" MaxHeight="200" UseHouseColor="true" LocalPlayerOnly="true" Texture="Decal_Sensor"/>
				</ModelConditionState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<Physics id="ModuleTag_Physics"/>
			<InvisibilityUpdate id="ModuleTag_Invisibility" Options="BROADCAST STARTS_ACTIVE" BroadcastRange="250" UpdatePeriod="0.1s">
				<InvisibilityNugget/>
				<BroadcastObjectFilter Rule="ALL" Relationship="ALLIES">
					<ExcludeThing>Viceroid</ExcludeThing>
					<ExcludeThing>AlienCrystalShield</ExcludeThing>
					<ExcludeThing>AlienPhaseShield</ExcludeThing>
					<ExcludeThing>AlienTemporalWormhole</ExcludeThing>
					<ExcludeThing>AlienWormHole</ExcludeThing>
				</BroadcastObjectFilter>
			</InvisibilityUpdate>
			<LifetimeUpdate id="ModuleTag_LifeTimeUpdate" MinLifetime="120s" MaxLifetime="120s" DeathType="FADED"/>
			<DestroyDie id="ModuleTag_Die">
				<DieMuxData DeathTypes="ALL"/>
			</DestroyDie>
			<FXListBehavior id="ModuleTag_FXList">
				<DieMuxData DeathTypes="ALL"/>
				<Event FX="FX_Nod_DisruptionPodExplosion"/>
			</FXListBehavior>
		</Behaviors>
		<AI>
			<AIUpdate id="ModuleTag_AI" AutoAcquireEnemiesWhenIdle="NO"/>
		</AI>
		<Body>
			<ActiveBody id="ModuleTag_Body" MaxHealth="25"/>
		</Body>
		<AudioArraySound>
			<AudioEntry Sound="NOD_Vertigo_DisruptionPodImpact" AudioType="soundAmbient"/>
		</AudioArraySound>
		<ShadowInfo Type="DECAL" Texture="shadowi" SizeX="14" SizeY="14"/>
	</GameObject>
	<!-- Vehicle Sticky Pod -->
	<GameObject id="NODVertigoDisruptionVehicleStickyPod" inheritFrom="NODVertigoDisruptionPod" KindOf="IMMOBILE MINE NO_COLLIDE" EditorName="NODVertigoDisruptionVehicleStickyPod">
		<Behaviors>
			<FXListBehavior id="ModuleTag_FXList" xai:joinAction="Remove"/>
			<AttachUpdate id="ModuleTag_AttachUpdate" Range="10.0" Teleport="true" UseGeometry="true" DetachWhenParentHealed="true">
				<ObjectFilter Rule="ANY" Include="VEHICLE STRUCTURE">
					<ExcludeThing>AlienCrystalShield</ExcludeThing>
					<ExcludeThing>AlienWormHole</ExcludeThing>
				</ObjectFilter>
			</AttachUpdate>
		</Behaviors>
	</GameObject>
	<!-- Aircraft Sticky Pod -->
	<GameObject id="NODVertigoDisruptionAircraftStickyPod" inheritFrom="NODVertigoDisruptionVehicleStickyPod" EditorName="NODVertigoDisruptionAircraftStickyPod">
		<Behaviors>
			<AttachUpdate xai:joinAction="Replace" id="ModuleTag_AttachUpdate" Range="10.0" Teleport="true" UseGeometry="true" DetachWhenParentHealed="true">
				<ObjectFilter Rule="NONE" Include="AIRCRAFT"/>
			</AttachUpdate>
		</Behaviors>
	</GameObject>
</AssetDeclaration>