			<AudioEntry Sound="NOD_DisruptionTower_OnlineMS" AudioType="soundReenabled"/>
			<AudioEntry Sound="NOD_DisruptionTower_OfflineMS" AudioType="soundDisabled"/>
		</AudioArraySound>
