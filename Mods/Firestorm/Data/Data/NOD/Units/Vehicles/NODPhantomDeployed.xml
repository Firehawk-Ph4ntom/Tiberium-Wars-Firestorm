					<Texture Original="NURepVeh" New="NURepVeh_D"/>
				</ModelConditionState>
				<ModelConditionState ParseCondStateType="PARSE_NORMAL" ConditionsYes="REALLYDAMAGED">
					<Model Name="NUREPVEH_SN"/>
					<Texture Original="NURepVeh" New="NURepVeh_D"/>
