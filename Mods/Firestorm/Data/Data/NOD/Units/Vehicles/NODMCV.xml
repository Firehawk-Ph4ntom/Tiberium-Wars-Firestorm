					<FXEvent Frame="45" FireWhenSkipped="true" Effect="FX_NODMCVFootprint" Bone="B_FRONTLEFT"/>
				</AnimationState>
				<AnimationState ParseCondStateType="PARSE_NORMAL" ConditionsYes="ACCELERATE">
