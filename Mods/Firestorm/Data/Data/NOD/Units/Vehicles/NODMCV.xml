				</AnimationState>
				<AnimationState ParseCondStateType="PARSE_NORMAL" ConditionsYes="AFFECTED_BY_EMP">
					<Script> CurDrawableHideSubObjectPermanently("LIGHTS") </Script>
				</AnimationState>
			</ScriptedModelDraw>
