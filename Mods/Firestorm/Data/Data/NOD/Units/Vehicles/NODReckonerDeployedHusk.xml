<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<Includes>
		<!-- Base Object -->
		<Include type="instance" source="DATA:Firestorm\Data\Data\Misc\BaseObjects\BaseVehicle.xml"/>
	</Includes>
	<GameObject id="NODReckonerDeployedHusk" inheritFrom="BaseVehicle" SelectPortrait="Portrait_NODReckoner" ButtonImage="Portrait_NODReckoner" Side="NOD" CommandSet="EmptyCommandSet" KindOf="PRELOAD CAN_CAST_REFLECTIONS IMMOBILE VEHICLE IGNORE_FOR_VICTORY UNATTACKABLE NOT_AUTOACQUIRABLE" EditorName="NODReckonerDeployedHusk">
		<DisplayName>Name:NODReckoner</DisplayName>
		<ArmorSet Armor="NoArmor"/>
		<Draws>
			<ScriptedModelDraw id="ModuleTag_Draw" OkToChangeModelColor="true">
				<ModelConditionState ParseCondStateType="PARSE_DEFAULT">
					<Model Name="NURECKONER_R_NOISE"/>
					<Texture Original="NUSuv" New="NUSuv_D"/>
					<Texture Original="NUReckoner" New="NUReckoner_D"/>
					<ParticleSysBone BoneName="BoneGarrison04" FXParticleSystemTemplate="GDIPredDamagedFire" FollowBone="true"/>
					<ParticleSysBone BoneName="BoneGarrison04" FXParticleSystemTemplate="GDIPredDamagedFireDistortion" FollowBone="true"/>
					<ParticleSysBone BoneName="BoneGarrison04" FXParticleSystemTemplate="GDIPredDamagedSmoke" FollowBone="true"/>
					<ParticleSysBone BoneName="FX_SteamJet_Front" FXParticleSystemTemplate="GDIPredDamagedSmoke" FollowBone="true"/>
					<ParticleSysBone BoneName="BONE_RIGHTTREAD" FXParticleSystemTemplate="GDIPredDamagedSmoke" FollowBone="true"/>
				</ModelConditionState>
				<AnimationState ParseCondStateType="PARSE_DEFAULT" Flags="START_FRAME_LAST">
					<Animation AnimationName="NURECKONER_UPAK" AnimationMode="MANUAL" AnimationBlendTime="0"/>
				</AnimationState>
			</ScriptedModelDraw>
			<ScriptedModelDraw id="ModuleTag_Particles">
				<ModelConditionState ParseCondStateType="PARSE_DEFAULT">
					<Model Name="GUMAMM_FX"/>
				</ModelConditionState>
				<AnimationState ParseCondStateType="PARSE_NORMAL" ConditionsYes="DYING">
					<ParticleSysBone BoneName="FXHULKFIRE" FXParticleSystemTemplate="GDIMammothHulkFire" FollowBone="true"/>
					<ParticleSysBone BoneName="FXHULKFIRE" FXParticleSystemTemplate="GDIMammothHulkFireGlow" FollowBone="true"/>
					<ParticleSysBone BoneName="FXHULKFIRE" FXParticleSystemTemplate="GDIMammothHulkFireDistortion" FollowBone="true"/>
					<ParticleSysBone BoneName="FXHULKFIRE" FXParticleSystemTemplate="GDIMammothHulkSmoke" FollowBone="true"/>
				</AnimationState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<LifetimeUpdate id="ModuleTag_LifeTimeUpdate" MinLifetime="0.1s" MaxLifetime="0.1s"/>
			<SlowDeath id="ModuleTag_Death" SinkDelay="3s" SinkRate="1.0" DestructionDelay="10s">
				<DieMuxData DeathTypes="ALL"/>
			</SlowDeath>
			<SubObjectsUpgrade id="ModuleTag_ShowSubObjectsDozerBlades" ShowSubObjects="DOZERBLADE">
				<TriggeredBy>Upgrade_NODDozerBlades</TriggeredBy>
			</SubObjectsUpgrade>
			<SubObjectsUpgrade id="ModuleTag_ShowSubobjectsSpeakers" ShowSubObjects="UG_SPEAKERS">
				<TriggeredBy>Upgrade_PropagandaBuff</TriggeredBy>
			</SubObjectsUpgrade>
		</Behaviors>
		<AI>
			<AIUpdate id="ModuleTag_AI" AutoAcquireEnemiesWhenIdle="NO" AILuaEventsList="NODReckonerHuskFunctions"/>
		</AI>
		<Body>
			<ActiveBody id="ModuleTag_Body" MaxHealth="100"/>
		</Body>
		<Geometry IsSmall="true">
			<Shape MajorRadius="0.8"/>
		</Geometry>
		<EvaEvents EvaEventPromotedOwner="" EvaEnemyObjectSightedEvent="" EvaEventDetectedEnemy="" EvaEventDieOwner=""/>
		<ShadowInfo Type="VOLUME"/>
		<VisionInfo VisionRange="350" ShroudClearingRange="350"/>
	</GameObject>
