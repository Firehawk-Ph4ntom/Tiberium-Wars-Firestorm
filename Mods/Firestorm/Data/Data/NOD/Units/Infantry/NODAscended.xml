	<GameObject id="NODAscended" inheritFrom="BaseInfantry" KindOf="SELECTABLE CAN_ATTACK CAN_CAST_REFLECTIONS INFANTRY PRELOAD ATTACK_NEEDS_LINE_OF_SIGHT PATH_THROUGH_INFANTRY HEALED_BY_TIBERIUM" Description="Desc:NODAscended" TypeDescription="Type:NODAscended" Side="NOD" EditorName="NODAscended" ThreatLevel="10" BuildTime="3.2" SelectPortrait="Portrait_NODAscended" ButtonImage="Portrait_NODAscended" VoicePriority="138" WeaponCategory="CANNON" UnitTypeIcon="CyborgAscendedPip" BuildCost="325">
