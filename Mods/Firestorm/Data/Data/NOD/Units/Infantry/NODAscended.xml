			</StatusBitsUpgrade>
			<AudioLoopUpgrade id="ModuleTag_FirestormIgnitionAudioLoop" SoundToPlay="GDI_Sandstorm_ThermoBaricMissilesUpgrade">
				<TriggeredBy>Upgrade_FirestormIgnition</TriggeredBy>
