				</AnimationState>
				<AnimationState ParseCondStateType="PARSE_TRANSITION" StateName="TRANS_CoverToCoverAttention">
					<Animation AnimationName="NUSabtr_KBTA" AnimationMode="ONCE"/>
				</AnimationState>
