	<GameObject id="NODDisruptionTower" inheritFrom="BaseStructure" SelectPortrait="Portrait_NODDisruptionTower" ButtonImage="Portrait_NODDisruptionTower" Side="NOD" BuildCost="1500" BuildTime="15" EnergyProduction="-15" CommandSet="GenericStructureCommandSet" KindOf="STRUCTURE SELECTABLE IMMOBILE CAN_CAST_REFLECTIONS FS_BASE_DEFENSE POWERED NOT_AUTOACQUIRABLE AUTO_ACQUIRABLE_BY_AI COVER BROADCASTS_INVISIBILITY" PlacementViewAngle="225d" ProductionQueueType="OTHER_STRUCTURE" BuildPlacementTypeFlag="OTHER_STRUCTURE" EditorName="NODDisruptionTower" Description="Desc:NODDisruptionTower" TypeDescription="Type:NODDisruptionTower">
