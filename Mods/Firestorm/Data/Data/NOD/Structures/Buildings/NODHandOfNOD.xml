					<Animation AnimationName="NBHandD2_AN" AnimationMode="MANUAL"/>
				</AnimationState>
				<AnimationState ParseCondStateType="PARSE_NORMAL" ConditionsYes="REALLYDAMAGED" StateName="STATE_ReallyDamaged" Flags="START_FRAME_LAST">
					<Animation AnimationName="NBHandD2_AN" AnimationMode="MANUAL"/>
					<Script> Prev = CurDrawablePrevAnimationState(); if Prev ~= "STATE_ReallyDamaged" and Prev ~= "TRANS_DamagedToReallyDamaged" then CurDrawableSetTransitionAnimState("TRANS_DamagedToReallyDamaged") end </Script>
				</AnimationState>
				<AnimationState ParseCondStateType="PARSE_NORMAL" ConditionsYes="DYING">
					<Animation AnimationName="NBHandD3_AN" AnimationMode="ONCE"/>
					<ParticleSysBone BoneName="NONE" FXParticleSystemTemplate="Des_Medium" FollowBone="false"/>
				</AnimationState>
				<AnimationState ParseCondStateType="PARSE_TRANSITION" StateName="TRANS_DamagedToReallyDamaged">
					<Animation AnimationName="NBHandD2_AN" AnimationMode="ONCE"/>
				</AnimationState>
			</ScriptedModelDraw>
			<ScriptedModelDraw id="ModuleTag_LFDraw" OkToChangeModelColor="true" UseStandardModelNames="true" StaticModelLODMode="true">
