<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xai="uri:ea.com:eala:asset:instance">
	<Tags/>
	<Includes>
		<!-- Base Object -->
		<Include type="instance" source="DATA:Firestorm\Data\Data\NOD\Units\Aircraft\NODVertigo.xml"/>
	</Includes>
	<GameObject id="NODVertigo_SPBombingRun" inheritFrom="NODVertigo" EditorName="NODVertigo_SPBombingRun">
		<LocomotorSet Locomotor="GenericJetAircraftLocomotor" Condition="NORMAL" Speed="150"/>
		<Behaviors>
			<WeaponSetUpdate id="ModuleTag_WeaponSetUpdate" xai:joinAction="Replace">
				<WeaponSlotHardpoint ID="1">
					<Weapon Ordering="PRIMARY_WEAPON" Template="NODVertigoBomb_SPBombingRun" />
				</WeaponSlotHardpoint>
			</WeaponSetUpdate>
			<InvisibilityUpdate id="ModuleTag_Invisibility_Intrinsic" xai:joinAction="Remove" />
		</Behaviors>
		<AI>
			<JetAIUpdate id="ModuleTag_AI" xai:joinAction="Replace" KeepsParkingSpaceWhenAirborne="true" AutoAcquireEnemiesWhenIdle="YES" CirclesForAttack="true">
				<UnitAITargetChooserData TargetingCompareList="CompleteUnitTargetingCompareList"/>
				<LockonInfo/>
			</JetAIUpdate>
		</AI>
		<Body>
			<ActiveBody id="ModuleTag_Body" xai:joinAction="Replace" MaxHealth="50000"/>
		</Body>
		<VisionInfo VisionRange="350" ShroudClearingRange="500"/>
	</GameObject>

	<WeaponTemplate
		id="NODVertigoBomb_SPBombingRun"
		Name="NODVertigoBomb_SPBombingRun"
		AttackRange="25"
		AcceptableAimDelta="20d"
		WeaponSpeed="200"
		FireSound="NOD_VertigoDropBomb"
		ClipSize="1"
		ReAcquireDetailType="PRE_FIRE"
		AntiMask="ANTI_GROUND ANTI_STRUCTURE"
		CanFireWhileMoving="true">
		<FiringDuration
			MinSeconds="0.5s"
			MaxSeconds="0.5s"/>
		<ClipReloadTime
			MinSeconds="0.1s"
			MaxSeconds="0.1s"/>
		<Nuggets>
			<ProjectileNugget
				WarheadTemplate="NODVertigoBombWarhead_SPBombingRun"
				ProjectileTemplate="NODVertigoBombProjectile_SPBombingRun"/>
		</Nuggets>
	</WeaponTemplate>

	<WeaponTemplate
		id="NODVertigoBombWarhead_SPBombingRun"
		Name="NODVertigoBombWarhead_SPBombingRun"
		AntiMask="ANTI_GROUND ANTI_STRUCTURE"
		ProjectileCollidesWith="ALLIES ENEMIES NEUTRAL STRUCTURES WALLS">
		<Nuggets>
			<DamageNugget
				Damage="10000000"
				Radius="160"
				DamageType="CANNON"
				DeathType="BURNED"
				DamageFXType="GDI_RIFLE"/>
			<SuppressionNugget
				Radius="100"
				Suppression="100"
				DurationSeconds="5s"/>
		</Nuggets>
	</WeaponTemplate>

	<GameObject id="NODVertigoBombProjectile_SPBombingRun" EditorSorting="SYSTEM" Side="NOD" KindOf="PROJECTILE NO_COLLIDE HIDE_IF_FOGGED" EditorName="NODVertigoBombProjectile_SPBombingRun">
		<ArmorSet Armor="NoArmor"/>
		<Draws>
			<ScriptedModelDraw id="ModuleTag_Draw">
				<ModelConditionState ParseCondStateType="PARSE_DEFAULT">
					<Model Name="FX_Bomb"/>
					<ParticleSysBone BoneName="NONE" FXParticleSystemTemplate="OrcaMissileTrail" FollowBone="true"/>
					<ParticleSysBone BoneName="NONE" FXParticleSystemTemplate="OrcaMissileTrail_Flash" FollowBone="true"/>
				</ModelConditionState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<FXListBehavior id="ModuleTag_FXList">
				<DieMuxData DeathTypes="ALL"/>
				<Event Index="onDeath" FX="FX_FuelAirBomb"/>
			</FXListBehavior>
			<DestroyDie id="ModuleTag_Die">
				<DieMuxData DeathTypes="ALL"/>
			</DestroyDie>
			<BezierProjectile id="ModuleTag_BezierProjectile" FirstHeightMin="5" FirstHeightMax="5" SecondHeightMin="5" SecondHeightMax="5" FirstPercentIndent="33" SecondPercentIndent="66" OrientToFlightPath="true" DetonateCallsKill="true" GroundHitFX="FX_NOD_Vertigo_DirtHit_BombImpactExplosion"/>
		</Behaviors>
		<Body>
			<ActiveBody id="ModuleTag_Body" MaxHealth="100.0"/>
		</Body>
	</GameObject>

	<FXList
		id="FX_FuelAirBomb">
		<NuggetList>
			<ParticleSystem
				Particle="AirBomb_Exp"/>
			<ParticleSystem
				Particle="AirBomb_Exp2"/>
			<ParticleSystem
				Particle="AirBomb_Exp3"/>
			<ParticleSystem
				Particle="AirBomb_Glow"/>
			<ParticleSystem
				Particle="AirBomb_Glow2"/>
			<ParticleSystem
				Particle="AirBomb_Shockwave"/>
			<ViewShake
				Type="STRONG"/>
			<Sound
				Value="Barrel_ExplodeMS"/>
		</NuggetList>
	</FXList>
</AssetDeclaration>